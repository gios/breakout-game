{
  "name": "breakout-game",
  "version": "0.0.1",
  "description": "Simple breakout game is built on TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "concurrently \"npm run tsc:compile\" \"npm run live\"",
    "develop": "concurrently \"npm run tsc:watch\" \"npm run live\"",
    "tsc:watch": "tsc --watch --inlineSourceMap --outDir ./compiled",
    "tsc:compile": "tsc --outDir ./compiled",
    "live": "live-server"
  },
