  },
  "homepage": "https://github.com/gios/breakout-game#readme",
  "dependencies": {
    "typescript": "^2.0.0"
  },
  "devDependencies": {
    "live-server": "^1.0.0",
    "tslint": "^3.13.0"
  }
}
